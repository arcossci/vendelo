<h2>Edit product</h2>
<%= form_for @product, url: product_path(@product), method: :patch do |f| %>
  <% @product.errors.full_messages.each do |error| %>
  <div>
    <%= error %>
  </div>
  <%end%>
  <%= f.label 'Product Title' %><br>
  <%= f.text_field :title %><br>

  <%= f.label 'Product Description' %><br>
  <%= f.text_area :desc_text %><br>

  <%= f.collection_select :category_id, Category.all.order(name: :asc), :id, :name %><br>

  <%= f.label 'Price' %><br>
  <%= f.text_field :price %><br>

  <%= f.label 'Product Photo' %><br>
  <%= f.file_field :photo %><br>

  <%= f.submit "Submit" %>
<%end%>
